<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane fx:controller="ImageManagementTool.ImageUploader" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="800.0" prefWidth="600.0">
    <children>

        <VBox alignment="CENTER" prefHeight="700.0" prefWidth="500.0" spacing="20.0">
            <children>
                <Label text="Upload Image:" />
                <Button fx:id="uploadButton" text="Choose Images" />
                <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                    <content>
                        <TilePane fx:id="imagePane" hgap="10.0" prefHeight="200.0" prefWidth="200.0" vgap="10.0" />
                    </content>
                </ScrollPane>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Convert to:" />
                        <ChoiceBox fx:id="formatChoiceBox" prefWidth="100.0" />
                        <Button fx:id="convertButton" mnemonicParsing="false" text="Convert" />
                        <Label fx:id="imageInfo"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>